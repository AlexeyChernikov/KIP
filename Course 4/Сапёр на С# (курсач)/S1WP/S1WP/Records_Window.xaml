<Window x:Class="S1WP.Records_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S1WP"
        mc:Ignorable="d"
        Title="Рекорды" ResizeMode="NoResize" Height="306" Width="466" Icon="Mine.png" WindowStartupLocation="CenterScreen">
    <Grid>
        <RadioButton x:Name="RB_BeginnerMode" Content="Новичок" HorizontalAlignment="Left" Height="16" Margin="93,10,0,0" VerticalAlignment="Top" Width="88" Checked="RB_BeginnerMode_Checked"/>
        <RadioButton x:Name="RB_EnthusiastMode" Content="Любитель" HorizontalAlignment="Left" Height="16" Margin="181,10,0,0" VerticalAlignment="Top" Width="88" Checked="RB_EnthusiastMode_Checked"/>
        <RadioButton x:Name="RB_ProfessionalMode" Content="Профессионал" HorizontalAlignment="Left" Height="16" Margin="269,10,0,0" VerticalAlignment="Top" Width="104" Checked="RB_ProfessionalMode_Checked"/>
        <DataGrid x:Name="Table_Records" HorizontalAlignment="Left" Height="216" Margin="10,40,0,0" VerticalAlignment="Top" Width="430" ColumnWidth="*"/>
    </Grid>
</Window>
