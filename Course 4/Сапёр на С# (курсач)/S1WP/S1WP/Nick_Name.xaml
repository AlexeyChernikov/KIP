<Window x:Class="S1WP.Nick_Name"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S1WP"
        mc:Ignorable="d"
        Title="Введите имя" ResizeMode="NoResize" Height="156" Width="186" Icon="Mine.png" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="Nick_NameTB" HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" MaxLength="20" PreviewKeyDown="Without_a_Space" TextChanged="Nick_NameTB_TextChanged" BorderBrush="Red"/>
        <Label Content="Введите ваше имя:" HorizontalAlignment="Left" Height="26" Margin="10,10,0,0" VerticalAlignment="Top" Width="150"/>
        <Button Content="Ок" HorizontalAlignment="Left" Height="33" Margin="23,74,0,0" VerticalAlignment="Top" Width="126" Click="Button_Click"/>

    </Grid>
</Window>
