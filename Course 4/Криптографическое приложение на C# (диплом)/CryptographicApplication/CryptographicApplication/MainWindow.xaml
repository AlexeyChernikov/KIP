        </Menu>
        <GroupBox Header="Исходные данные" HorizontalAlignment="Left" Height="228" Margin="13,116,0,0" VerticalAlignment="Top" Width="183">
            <Grid HorizontalAlignment="Left" Height="198" Margin="3,6,0,0" VerticalAlignment="Top" Width="164">
                <TextBox HorizontalAlignment="Left" Height="20" Margin="41,11,0,0" TextWrapping="Wrap" Text="//путь к файлу" VerticalAlignment="Top" Width="113"/>
