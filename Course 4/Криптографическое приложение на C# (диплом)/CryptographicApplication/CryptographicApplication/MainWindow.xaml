                <TextBox HorizontalAlignment="Left" Height="128" Margin="6,36,0,0" TextWrapping="Wrap" Text="//исходный текст" VerticalAlignment="Top" Width="148"/>
                <Button Content="Очистить" HorizontalAlignment="Left" Height="20" Margin="6,169,0,0" VerticalAlignment="Top" Width="78"/>
                <Button Content="+" HorizontalAlignment="Left" Height="20" Margin="89,169,0,0" VerticalAlignment="Top" Width="30"/>
                <Button Content="-" HorizontalAlignment="Left" Height="20" Margin="124,169,0,0" VerticalAlignment="Top" Width="30"/>
            </Grid>
        </GroupBox>
        <Button Content="//операция" HorizontalAlignment="Left" Height="28" Margin="155,401,0,0" VerticalAlignment="Top" Width="91"/>
        <GroupBox Header="Результат" HorizontalAlignment="Left" Height="228" Margin="207,116,0,0" VerticalAlignment="Top" Width="183">
            <Grid HorizontalAlignment="Left" Height="198" Margin="3,6,0,0" VerticalAlignment="Top" Width="164">
                <Button Content="Сохранить" HorizontalAlignment="Left" Height="20" Margin="4,10,0,0" VerticalAlignment="Top" Width="68"/>
                <TextBox HorizontalAlignment="Left" Height="125" Margin="6,36,0,0" TextWrapping="Wrap" Text="//зашифрованный текст" VerticalAlignment="Top" Width="148"/>
                <Button Content="Очистить" HorizontalAlignment="Left" Height="20" Margin="6,166,0,0" VerticalAlignment="Top" Width="78"/>
                <Button Content="Сохр как" HorizontalAlignment="Left" Height="20" Margin="77,10,0,0" VerticalAlignment="Top" Width="77"/>
                <Button Content="+" HorizontalAlignment="Left" Height="20" Margin="89,166,0,0" VerticalAlignment="Top" Width="30"/>
                <Button Content="-" HorizontalAlignment="Left" Height="20" Margin="124,166,0,0" VerticalAlignment="Top" Width="30"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Операция" HorizontalAlignment="Left" Height="47" Margin="13,69,0,0" VerticalAlignment="Top" Width="377">
            <Grid HorizontalAlignment="Left" Height="26" Margin="0,0,-2,-1" VerticalAlignment="Top" Width="366">
                <RadioButton Content="Шифрование" HorizontalAlignment="Left" Height="20" Margin="46,5,0,0" VerticalAlignment="Top" Width="110"/>
                <RadioButton Content="Дешифрование" HorizontalAlignment="Left" Height="20" Margin="207,5,0,0" VerticalAlignment="Top" Width="110"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Алгоритм" HorizontalAlignment="Left" Height="47" Margin="13,25,0,0" VerticalAlignment="Top" Width="377">
            <ComboBox HorizontalAlignment="Left" Height="20" Margin="10,4,0,0" VerticalAlignment="Top" Width="346"/>
        </GroupBox>
        <GroupBox Header="Ключ" HorizontalAlignment="Left" Height="47" Margin="13,349,0,0" VerticalAlignment="Top" Width="377">
            <TextBox HorizontalAlignment="Left" Height="20" Margin="10,4,0,0" TextWrapping="Wrap" Text="//тут ключ" VerticalAlignment="Top" Width="346"/>
        </GroupBox>

    </Grid>
</Window>
