<Window x:Class="CryptographicApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptographicApplication"
        mc:Ignorable="d"
        Title="Криптографическое приложение" Height="682" Width="538" WindowStartupLocation="CenterScreen" Icon="logo.png" ResizeMode="NoResize">
    <Grid>
        <Menu Height="20" VerticalAlignment="Top">
            <MenuItem Header="Файл">
                <MenuItem x:Name="menu_btn_FileSelection" Header="Открыть..." Click="Menu_btn_FileSelection_Click"/>
                <MenuItem Header="Сохранить"/>
                <MenuItem x:Name="menu_btn_SaveFileAs" Header="Сохранить как..." Click="Menu_btn_SaveFileAs_Click"/>
                <Separator/>
                <MenuItem x:Name="menu_btn_Exit" Header="Выход" Click="Menu_btn_Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Header="О программе"/>
            </MenuItem>
        </Menu>
        <GroupBox Header="Исходные данные" HorizontalAlignment="Left" Height="186" Margin="13,148,0,0" VerticalAlignment="Top" Width="495">
            <Grid Margin="0,6,7,2">
                <TextBox x:Name="tb_FileName" Margin="45,0,3,0" TextWrapping="Wrap" Text="//путь к файлу" Height="20" VerticalAlignment="Top"/>
                <Button x:Name="btn_FileSelection" Content="ВФ" HorizontalAlignment="Left" Height="20" Margin="10,0,0,0" VerticalAlignment="Top" Width="30" RenderTransformOrigin="0.567,-0.9" Click="Btn_FileSelection_Click"/>
                <TextBox x:Name="tb_SourceData" Margin="10,25,3,0" TextWrapping="Wrap" Text="//исходный текст" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Height="100" VerticalAlignment="Top"/>
                <Button x:Name="btn_Clear_1" Content="Очистить" HorizontalAlignment="Left" Height="20" Margin="325,130,0,0" VerticalAlignment="Top" Width="78" Click="Btn_Clear_1_Click"/>
                <Button x:Name="btn_Increase_1" Content="+" HorizontalAlignment="Left" Height="20" Margin="408,130,0,0" VerticalAlignment="Top" Width="30" Click="Btn_Increase_1_Click"/>
                <Button x:Name="btn_Reduce_1" Content="-" HorizontalAlignment="Left" Height="20" Margin="443,130,0,0" VerticalAlignment="Top" Width="30" Click="Btn_Reduce_1_Click"/>
                <Button x:Name="btn_SaveFile" Content="Сохранить" HorizontalAlignment="Left" Height="20" Margin="10,130,0,0" VerticalAlignment="Top" Width="110" Click="Btn_SaveFile_Click"/>
                <Button x:Name="btn_SaveFile_Copy" Content="Сохранить как" HorizontalAlignment="Left" Height="20" Margin="125,130,0,0" VerticalAlignment="Top" Width="110" Click="Btn_SaveFile_Click"/>
            </Grid>
        </GroupBox>
        <Button Content="Выполнить" HorizontalAlignment="Left" Height="28" Margin="221,599,0,0" VerticalAlignment="Top" Width="91"/>
        <GroupBox Header="Результат" HorizontalAlignment="Left" Height="186" Margin="13,339,0,0" VerticalAlignment="Top" Width="495">
            <Grid Margin="0,6,-2,2">
                <TextBox x:Name="tb_EncryptedData" Margin="10,25,12,0" TextWrapping="Wrap" Text="//зашифрованный текст" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Height="100" VerticalAlignment="Top"/>
                <Button x:Name="btn_Clear_2" Content="Очистить" HorizontalAlignment="Left" Height="20" Margin="325,130,0,0" VerticalAlignment="Top" Width="78" Click="Btn_Clear_2_Click"/>
                <Button x:Name="btn_SaveFileAs" Content="Сохранить" HorizontalAlignment="Left" Height="20" Margin="10,130,0,0" VerticalAlignment="Top" Width="110" Click="Btn_SaveFileAs_Click"/>
                <Button x:Name="btn_Increase_2" Content="+" HorizontalAlignment="Left" Height="20" Margin="408,130,0,0" VerticalAlignment="Top" Width="30" Click="Btn_Increase_2_Click"/>
                <Button x:Name="btn_Reduce_2" Content="-" HorizontalAlignment="Left" Height="20" Margin="443,130,0,0" VerticalAlignment="Top" Width="30" Click="Btn_Reduce_2_Click"/>
                <Button x:Name="btn_SaveFileAs_Copy" Content="Сохранить как" HorizontalAlignment="Left" Height="20" Margin="125,130,0,0" VerticalAlignment="Top" Width="110" Click="Btn_SaveFileAs_Click"/>
                <TextBox x:Name="tb_FileName_Copy" Margin="45,0,12,0" TextWrapping="Wrap" Text="//путь к файлу" Height="20" VerticalAlignment="Top"/>
                <Button x:Name="btn_FileSelection_Copy" Content="ВФ" HorizontalAlignment="Left" Height="20" Margin="10,0,0,0" VerticalAlignment="Top" Width="30" RenderTransformOrigin="0.567,-0.9" Click="Btn_FileSelection_Click"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Операция" HorizontalAlignment="Left" Height="56" Margin="13,26,0,0" VerticalAlignment="Top" Width="495">
            <Grid Margin="0,0,-2,4">
                <RadioButton Content="Шифрование" HorizontalAlignment="Left" Height="20" Margin="115,5,0,0" VerticalAlignment="Top" Width="110" IsChecked="True"/>
                <RadioButton Content="Дешифрование" HorizontalAlignment="Left" Height="20" Margin="280,5,0,0" VerticalAlignment="Top" Width="110"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Алгоритм" HorizontalAlignment="Left" Height="56" Margin="13,87,0,0" VerticalAlignment="Top" Width="495">
            <ComboBox Margin="10,6,10,0" Height="20" VerticalAlignment="Top"/>
        </GroupBox>
        <GroupBox Header="Ключ" HorizontalAlignment="Left" Height="56" Margin="13,530,0,0" VerticalAlignment="Top" Width="495">
            <Grid Margin="0,6,-2,2">
                <Button x:Name="btn_FileSelection_Copy1" Content="ВФ" HorizontalAlignment="Left" Height="20" Margin="10,0,0,0" VerticalAlignment="Top" Width="30" RenderTransformOrigin="0.567,-0.9" Click="Btn_FileSelection_Click"/>
                <TextBox x:Name="tb_FileName_Copy1" Margin="45,0,12,0" TextWrapping="Wrap" Text="//тут ключ" Height="20" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
