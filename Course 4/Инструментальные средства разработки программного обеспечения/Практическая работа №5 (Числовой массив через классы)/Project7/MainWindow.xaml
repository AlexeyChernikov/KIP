        <Label x:Name="SecondaryDiagonalSum" Content="Сумма элементов:" HorizontalAlignment="Left" Margin="159,37,0,0" VerticalAlignment="Top" Initialized="SecondaryDiagonalSum_Initialized" Grid.Column="1"/>
        <Label Content="Побочная диагональ:" HorizontalAlignment="Left" Height="27" Margin="159,10,0,0" VerticalAlignment="Top" Width="142" Grid.Column="1" FontWeight="Bold"/>
        <Label x:Name="LeftTriangleMin" Content="Минимальный элемент:" HorizontalAlignment="Left" Margin="322,173,0,0" VerticalAlignment="Top" Initialized="LeftTriangleMin_Initialized" Grid.ColumnSpan="2"/>
        <Label x:Name="LeftTriangleMax" Content="Максимальный элемент:" HorizontalAlignment="Left" Margin="322,199,0,0" VerticalAlignment="Top" Initialized="LeftTriangleMax_Initialized" Grid.ColumnSpan="2"/>
        <Label x:Name="LeftTriangleSum" Content="Сумма элементов:" HorizontalAlignment="Left" Margin="322,147,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Initialized="LeftTriangleSum_Initialized"/>
