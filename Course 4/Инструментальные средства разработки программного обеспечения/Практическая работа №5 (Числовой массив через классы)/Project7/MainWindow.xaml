        <Label x:Name="RightTriangleMax" Content="Максимальный элемент:" HorizontalAlignment="Left" Margin="158,199,0,0" VerticalAlignment="Top" Initialized="RightTriangleMax_Initialized" Grid.Column="1"/>
        <Label x:Name="RightTriangleSum" Content="Сумма элементов:" HorizontalAlignment="Left" Margin="158,147,0,0" VerticalAlignment="Top" Initialized="RightTriangleSum_Initialized" Grid.Column="1"/>
        <Label Content="Правый треугольник:" HorizontalAlignment="Left" Height="27" Margin="159,120,0,0" VerticalAlignment="Top" Width="142" Grid.Column="1" FontWeight="Bold"/>
        <Label x:Name="UpTriangleMin" Content="Минимальный элемент:" HorizontalAlignment="Left" Margin="322,288,0,0" VerticalAlignment="Top" Initialized="UpTriangleMin_Initialized" Grid.ColumnSpan="2"/>
