        <Label x:Name="DownTriangleMax" Content="Максимальный элемент:" HorizontalAlignment="Left" Margin="157,314,0,0" VerticalAlignment="Top" Initialized="DownTriangleMax_Initialized" Grid.Column="1"/>
        <Label x:Name="DownTriangleSum" Content="Сумма элементов:" HorizontalAlignment="Left" Margin="157,262,0,0" VerticalAlignment="Top" Initialized="DownTriangleSum_Initialized" Grid.Column="1"/>
        <Label Content="Нижний треугольник:" HorizontalAlignment="Left" Height="27" Margin="158,235,0,0" VerticalAlignment="Top" Width="142" Grid.Column="1" FontWeight="Bold"/>
